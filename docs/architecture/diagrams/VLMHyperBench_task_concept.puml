title VLMHyperBench - Концепция Task

Person(user, "Пользователь", "Исследователь или разработчик")

System_Boundary(vlmhyperbench, "VLMHyperBench") {
    Container(orchestration, "Оркестрация", "Python", "Управляет выполнением задач")

    Container(task1, "Task 1", "Python", "Первая задача")
    Container(task2, "Task 2", "Python", "Вторая задача")
    Container(task3, "Task 3", "Python", "Третья задача")

    Container_Boundary(task_structure, "Структура Task") {
        Container(stage1, "1 Обучение модели", "Python", "Этап обучения")
        Container(stage2, "2 Получение ответов", "Python", "Этап инференса")
