        Container(stage4, "4 Генерация отчетов", "Python", "Этап отчетов")
    }
}

Rel(user, orchestration, "Запускает", "CLI")

Rel(orchestration, task1, "запускает")
Rel(orchestration, task2, "запускает")
Rel(orchestration, task3, "запускает")

Rel(task1, stage1, "использует")
Rel(task2, stage1, "использует")
Rel(task3, stage1, "использует")

Rel(stage1, stage2, "следующий этап")
Rel(stage2, stage3, "следующий этап")
Rel(stage3, stage4, "следующий этап")

